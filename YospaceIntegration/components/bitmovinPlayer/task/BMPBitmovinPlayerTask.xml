<?xml version="1.0" encoding="utf-8" ?>
<component name="BMPBitmovinPlayerTask" extends="Task">
    <interface>
        <function name="runTask" />
        <function name="stopTask" />
        <function name="isTaskRunning" />
        <function name="removeVideoNodeObservers" />
        <function name="resetState" />

         <!-- Video field to be used together with setVideoNodeObservers in order to prevent observing directly interface of type node-->
        <field id="video" type="node" alwaysNotify="true" />
         <!-- Used observer pattern instead of function to avoid problems with accessing m.port object in function execution -->
        <field id="setVideoNodeObservers" type="boolean" alwaysNotify="true" />
        <field id="handleOperation" type="node" alwaysNotify="true" />
        <field id="subscribe" type="node" alwaysNotify="true" />
    </interface>
